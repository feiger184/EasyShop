<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="com.feicui.easyshop">

    <!-- 网络权限 -->
    <uses-permission android:name="android.permission.INTERNET"/>
    <!-- 相机权限 -->
    <uses-permission android:name="android.permission.CAMERA"/>
    <!-- SD卡读写权限 -->
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

    <application
        android:name=".EasyShopApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:replace="android:icon">
        <activity android:name=".main.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".main.MainActivity">
        </activity>
        <activity android:name=".user.login.LoginActivity">
        </activity>
        <activity android:name=".user.register.RegisterActivity">
        </activity>
        <activity android:name=".main.me.personInfo.PersonActivity">
        </activity>
        <activity android:name=".main.me.personInfo.NickNameActivity">
        </activity>
        <activity android:name=".main.shop.detail.GoodsDetailActivity">
        </activity>
        <activity android:name=".main.me.persongoods.PersonGoodsActivity">
        </activity>
        <activity android:name=".main.shop.detail.GoodsDetailInfoActivity">
        </activity>
        <activity android:name=".main.me.goodsupload.GoodsUpLoadActivity">
        </activity>
        <activity android:name=".main.me.goodsupload.GoodsUpLoadImageShowActivity">
        </activity>
    </application>

</manifest>